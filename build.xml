<?xml version="1.0"?>
<project name="biderpcore" basedir="." default="jar">    
	<property name="src" value="${basedir}"/>    
	<property name="output" value="${basedir}/build"/>
	<property name="jarpath" value="/home/srimanta/erp/biderp/WebContent/WEB-INF/lib"/>
	
	<property name="libpath" value="/home/srimanta/erp/3rdparty/lib"/>
		
	<target name="compile" depends="create">        
		<javac destdir="${output}"  debug="on">                        
			<src path="${src}"/>                        
			<classpath refid="java"/>        
		</javac>    
	</target>    
	<target name="jar" depends="compile">        
		<jar destfile="${libpath}/biderpinfra.jar">            
			<fileset dir="${output}"/>        
		</jar>
	</target>
	<target name="copy" depends="jar">
		<copy file="${libpath}/biderpinfra.jar" tofile="${jarpath}/biderpinfra.jar" overwrite="true" />
	</target>
	<target name="clean">        
		<delete dir="${output}"/>    
	</target>    
	<target name="create" depends="clean">        
		<mkdir dir="${output}"/>    
	</target>    
	<path id="java">        
		<fileset dir="${libpath}">            
			<include name="*.jar"/>        
		</fileset>    
	</path>
</project>
